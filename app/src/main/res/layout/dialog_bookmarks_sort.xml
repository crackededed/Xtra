<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="?attr/dialogPadding">

        <RadioGroup
            android:id="@+id/sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold"
                android:layout_marginStart="5dp" />

            <RadioButton
                android:id="@+id/expired_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_date_high" />

            <RadioButton
                android:id="@+id/expired_at_asc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/deletion_date_low" />

            <RadioButton
                android:id="@+id/created_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/creation_date_high" />

            <RadioButton
                android:id="@+id/created_at_asc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/creation_date_low" />

            <RadioButton
                android:id="@+id/saved_at"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saved_date_high" />

            <RadioButton
                android:id="@+id/saved_at_asc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/saved_date_low" />

        </RadioGroup>

        <Button
            android:id="@+id/saveDefault"
            style="?attr/bottomSheetButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_default" />

        <Button
            android:id="@+id/apply"
            style="?attr/bottomSheetButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>