<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="?attr/dialogPadding">

        <RadioGroup
            android:id="@+id/sort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/sort"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload_date" />

            <RadioButton
                android:id="@+id/views"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/view_count" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/sortType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/type"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/typeArchive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_type_archive" />

            <RadioButton
                android:id="@+id/typeHighlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_type_highlight" />

            <RadioButton
                android:id="@+id/typeUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_type_upload" />

            <RadioButton
                android:id="@+id/typeAll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/period"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/today"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/today" />

            <RadioButton
                android:id="@+id/week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/this_week" />

            <RadioButton
                android:id="@+id/month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/this_month" />

            <RadioButton
                android:id="@+id/all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/all_time" />

        </RadioGroup>

        <Button
            android:id="@+id/selectLanguages"
            style="?attr/bottomSheetButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/languages" />

        <Button
            android:id="@+id/saveDefault"
            style="?attr/bottomSheetButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_default" />

        <LinearLayout
            android:id="@+id/saveSortLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/saveSort"
                style="?attr/bottomSheetButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save_sort_game" />

            <ImageView
                android:id="@+id/deleteSavedSort"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/baseline_close_black_36"
                app:tint="?attr/colorControlNormal" />

        </LinearLayout>

        <Button
            android:id="@+id/apply"
            style="?attr/bottomSheetButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>