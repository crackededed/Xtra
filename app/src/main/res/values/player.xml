<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Player">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="show_buffering">always</item>
        <item name="surface_type">surface_view</item>
        <item name="animation_enabled">false</item>
    </style>

    <style name="PlayerImage">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="PlayerSmallImage" parent="PlayerImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="PlayerLargeImage" parent="PlayerImage">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="PlayerTopRightPanel">
        <item name="android:id">@id/topRightPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerTopLeftPanel">
        <item name="android:id">@id/topLeftPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toStartOf">@id/topRightPanel</item>
        <item name="android:layout_toLeftOf">@id/topRightPanel</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerTopLeftChannelSubPanel">
        <item name="android:id">@id/topLeftChannelSubPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayerBotRightPanel">
        <item name="android:id">@id/botRightPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerBotLeftPanel">
        <item name="android:id">@id/botLeftPanel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="PlayerPosition" parent="PlayerText">
        <item name="android:id">@id/exo_position</item>
        <item name="android:layout_width">55sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginStart">7dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="PlayerDuration" parent="PlayerText">
        <item name="android:id">@id/exo_duration</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="PlayerProgress">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_toEndOf">@id/exo_position</item>
        <item name="android:layout_toRightOf">@id/exo_position</item>
        <item name="android:layout_toLeftOf">@id/exo_duration</item>
        <item name="android:layout_toStartOf">@id/exo_duration</item>
    </style>

    <style name="PlayerRewind" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_rew_with_amount</item>
        <item name="android:foreground">@drawable/exo_styled_controls_rewind</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PlayerForward" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_ffwd_with_amount</item>
        <item name="android:foreground">@drawable/exo_styled_controls_fastforward</item>
        <item name="android:gravity">center|bottom</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="PlayerPlayPause" parent="PlayerLargeImage">
        <item name="android:id">@id/exo_play_pause</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="PlayerShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:alpha">0.4</item>
    </style>

    <style name="PlayerChannel" parent="PlayerText">
        <item name="android:id">@id/playerChannel</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">20sp</item>
        <item name="autoSizeMinTextSize">10sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">20sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerTitle" parent="PlayerText">
        <item name="android:id">@id/playerTitle</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">15sp</item>
        <item name="autoSizeMinTextSize">7sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">15sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerCategory" parent="PlayerText">
        <item name="android:id">@id/playerCategory</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">12sp</item>
        <item name="autoSizeMinTextSize">6sp</item>
        <item name="autoSizeStepGranularity">1sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">12sp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerMenu" parent="PlayerSmallImage">
        <item name="android:id">@id/playerMenu</item>
        <item name="android:src">@drawable/baseline_more_vert_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerMinimize" parent="PlayerSmallImage">
        <item name="android:id">@id/playerMinimize</item>
        <item name="android:src">@drawable/baseline_expand_more_black_48</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerSpeed" parent="PlayerSmallImage">
        <item name="android:id">@id/playerSpeed</item>
        <item name="android:src">@drawable/exo_ic_speed</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerSettings" parent="PlayerSmallImage">
        <item name="android:id">@id/playerSettings</item>
        <item name="android:src">@drawable/baseline_settings_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerDownload" parent="PlayerSmallImage">
        <item name="android:id">@id/playerDownload</item>
        <item name="android:src">@drawable/ic_file_download_black_24dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerFollow" parent="PlayerSmallImage">
        <item name="android:id">@id/playerFollow</item>
        <item name="android:src">@drawable/baseline_favorite_border_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerSleep" parent="PlayerSmallImage">
        <item name="android:id">@id/playerSleepTimer</item>
        <item name="android:src">@drawable/baseline_alarm_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerFullscreenToggle" parent="PlayerSmallImage">
        <item name="android:id">@id/playerFullscreenToggle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerChatToggle" parent="PlayerSmallImage">
        <item name="android:id">@id/playerChatToggle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerGames" parent="PlayerSmallImage">
        <item name="android:id">@id/playerGames</item>
        <item name="android:src">@drawable/baseline_format_list_bulleted_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerRestart" parent="PlayerSmallImage">
        <item name="android:id">@id/playerRestart</item>
        <item name="android:src">@drawable/baseline_replay_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerSeekLive" parent="PlayerSmallImage">
        <item name="android:id">@id/playerSeekLive</item>
        <item name="android:src">@drawable/exo_icon_fastforward</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerVolume" parent="PlayerSmallImage">
        <item name="android:id">@id/playerVolume</item>
        <item name="android:src">@drawable/baseline_volume_up_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerAudioCompressor" parent="PlayerSmallImage">
        <item name="android:id">@id/playerAudioCompressor</item>
        <item name="android:src">@drawable/baseline_audio_compressor_off_24dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerMode" parent="PlayerSmallImage">
        <item name="android:id">@id/playerMode</item>
        <item name="android:src">@drawable/baseline_audiotrack_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerSubtitleToggle" parent="PlayerSmallImage">
        <item name="android:id">@id/playerSubtitleToggle</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerChatBarToggle" parent="PlayerSmallImage">
        <item name="android:id">@id/playerChatBarToggle</item>
        <item name="android:src">@drawable/baseline_keyboard_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerRatio" parent="PlayerSmallImage">
        <item name="android:id">@id/playerAspectRatio</item>
        <item name="android:src">@drawable/baseline_aspect_ratio_black_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="PlayerViewers" parent="PlayerImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/baseline_person_black_36</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>